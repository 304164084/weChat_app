.container {
  background-color: #fff;
  width: 100%;
  position: fixed;
  top: 70rpx;
  left: 0;
  bottom: 100rpx;
}
.container-scroll {
  width: 100%;
  position: fixed;
  top: 70rpx;
  left: 0;
  bottom: 100rpx;
}

.scrol-items {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 70rpx;
  white-space: nowrap;
  background-color: #fff;
}

.size-color {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex; 
  flex-direction: row; 
  align-items: center; 
}
.size {
  margin-left: 50rpx;
  height: 50%;
  width: 100rpx;
  background-color: #fff;
  border: solid 1px #000;
  text-align: center;
  font-size: 13px;
  line-height: 60rpx;
  
  /*宽度自适应  */
  /* padding-left: 20rpx;
  padding-right: 20rpx; */
}
.color {
  margin-left: 50rpx;
  width: 350rpx; 
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  
}
.color-item-normal {
  width: 68rpx;
  height: 86rpx;
  margin-left: 4rpx;
}
.color-item-bigger {
  width: 88.5rpx;
  height: 112rpx;
  margin-left: 4rpx;
}

.mask-view {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0; 
}

.size-list {
  width: 100%;
  height: 0rpx;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  opacity: 0.9;
  background: #fff;
  
}
.size-item {
  width: 100%;
  height: 40px;
  line-height: 40px;
  padding-left: 50rpx;
  font-size: 14px;
  font-weight: bold;
  
}

.price {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 40rpx;
  background-color: #f1f1f1;

}
.sell-price {
  margin-right: 30rpx;
  font-size: 16px;
  color: #c92632;
  font-weight: bold;
  /* height: 100%;
  line-height: 100%; */
}
.tag-price {
  margin-right: 30rpx;
  font-size: 13px;
  text-decoration: line-through;
  
}

.match-items {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  flex-wrap: wrap; 
  
}
.bottom-nav {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.nav-button {
  width: 200rpx; 
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  align-self: center;
  text-align: center; 
  font-size: 16px; 
  background-color: #c92632; 
  color: #fff;
}
/*按钮点下去的样式  */
.button-hover {
  opacity: 0.7;
}
